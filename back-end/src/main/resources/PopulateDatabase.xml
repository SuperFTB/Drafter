<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<!-- User accounts -->

	<bean id="user1" class="drafter.domain.User">
		<property name="name" value="Emily" />
		<property name="surname" value="Thompson" />
		<property name="email" value="ethompson@user.com" />
	</bean>
	
	<bean id="user2" class="drafter.domain.User">
		<property name="name" value="Emma" />
		<property name="surname" value="Potter" />
		<property name="email" value="epotter@user.com" />
	</bean>
	
	<bean id="user3" class="drafter.domain.User">
		<property name="name" value="Olivia" />
		<property name="surname" value="Smith" />
		<property name="email" value="osmith@user.com" />
	</bean>
	
	<bean id="user4" class="drafter.domain.User">
		<property name="name" value="Abigail" />
		<property name="surname" value="Williams" />
		<property name="email" value="awilliams@user.com" />
	</bean>
	
	<bean id="user5" class="drafter.domain.User">
		<property name="name" value="Ryan" />
		<property name="surname" value="Miller" />
		<property name="email" value="rmiller@user.com" />
	</bean>
	
	
	<!-- Department -->
	
	
	<bean id="department1" class="drafter.domain.Department">
		<property name="name" value="Development" />
		<property name="users">
			<list>
				<ref bean="user1" />
				<ref bean="user2" />
				<ref bean="user3" />
		  	</list>
		</property>
	</bean>
	
	<bean id="department2" class="drafter.domain.Department">
		<property name="name" value="Marketing" />
		<property name="users">
			<list>
				<ref bean="user4" />
				<ref bean="user5" />
		  	</list>
		</property>
	</bean>
	
	
</beans>